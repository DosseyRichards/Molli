  script.
    $(document).ready(function(){
        var videoPlayer= document.getElementById('video');
        videoPlayer.src=  "http://Molli.tv/videos/#{montage.videos[0].video}";
        var i = 1;
        var _videos = !{JSON.stringify(montage.videos)};
        videoPlayer.addEventListener('ended', function(){
          if(i < #{montage.videos.length} ){
              this.pause();
              this.src = "http://Molli.tv/videos/" + _videos[i].video;
              i++;
            }
            else{
              this.src = "http://Molli.tv/videos/!{montage.videos[0].video}";
              i = 1;
            }

              }, false);
    });
